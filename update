#!/usr/bin/bash

cp -rf ~/.local/bin/* ~/.dotfiles/.local/bin/
cp -rf ~/.bashrc ~/.dotfiles/
cp -rf ~/.tmux.conf ~/.dotfiles/
cp -rf ~/.tmux.powerline.conf ~/.dotfiles/
cp -rf ~/.tmux.statusline.conf ~/.dotfiles/
cp -rf ~/.xinitrc ~/.dotfiles/

cp -rf ~/.config/alacritty/ ~/.dotfiles/.config/
cp -rf ~/.config/bspwm/ ~/.dotfiles/.config/
cp -rf ~/.config/Code/User/settings.json ~/.dotfiles/.config/Code/User/
cp -rf ~/.config/dunst ~/.dotfiles/.config/
cp -rf ~/.config/fish/config.fish ~/.dotfiles/.config/fish/
cp -rf ~/.config/i3/ ~/.dotfiles/.config/
cp -rf ~/.config/i3status/ ~/.dotfiles/.config/
cp -rf ~/.config/mpv/ ~/.dotfiles/.config/
cp -rf ~/.config/picom/ ~/.dotfiles/.config/
cp -rf ~/.config/polybar/ ~/.dotfiles/.config/
cp -rf ~/.config/qtile/icons/ ~/.dotfiles/.config/qtile/
cp -rf ~/.config/qtile/scripts/ ~/.dotfiles/.config/qtile/
cp -rf ~/.config/qtile/autostart.sh ~/.dotfiles/.config/qtile/
cp -rf ~/.config/qtile/colors.py ~/.dotfiles/.config/qtile/
cp -rf ~/.config/qtile/config.py ~/.dotfiles/.config/qtile/
cp -rf ~/.config/qutebrowser/config.py ~/.dotfiles/.config/qutebrowser/
cp -rf ~/.config/redshift/redshift.conf ~/.dotfiles/.config/redshift/
cp -rf ~/.config/rofi/ ~/.dotfiles/.config/
cp -rf ~/.config/sxhkd/ ~/.dotfiles/.config/
cp -rf ~/.config/vimb/ ~/.dotfiles/.config/
cp -rf ~/.config/starship.toml ~/.dotfiles/.config/

echo "DONE!"
